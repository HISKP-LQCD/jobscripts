measurements=N
startcondition=S
initialstorecounter=I
seed=D
ranluxdlevel=L
reproducerandomnumbers=R


L=4
T=4
2KappaMu = 0.0
CSW = 0.0
kappa = 0.17
NSave = 5000
writecheckpoints=yes
ThetaT = 1.0
BCGstabMaxIter = 0
